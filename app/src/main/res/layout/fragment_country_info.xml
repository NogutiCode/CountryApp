<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/countryInfo"
    android:name="com.example.CountryInfoFragment"
    tools:context=".CountryInfo">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="142dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/toChoose"
        android:src="@drawable/nicepng_arrow_png_transparent_1039094"
        android:layout_margin="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:tint="@drawable/tint_selector" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:text="Countries"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        android:background="#808080" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp">

        <LinearLayout
            android:id="@+id/listOfCountries"
            android:padding="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>



</FrameLayout>